<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Voyage_V2">
        <activity
            android:name=".PackageCreateActivity"
            android:exported="false" />
        <!-- Home Screen -->
        <activity
            android:name=".HomeActivity"
            android:exported="false"
            android:theme="@style/Theme.Voyage_V2.NoStatusBar" /> <!-- Register Screen (Full screen) -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.Voyage_V2.NoStatusBar" /> <!-- Login Screen (Full screen) -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.Voyage_V2.NoStatusBar" /> <!-- Prompt Screen (Full screen) -->
        <activity
            android:name=".PromptScreen"
            android:exported="false"
            android:theme="@style/Theme.Voyage_V2.NoStatusBar" /> <!-- Main Entry Point -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Voyage_V2.NoStatusBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>